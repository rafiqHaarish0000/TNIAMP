<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.farmwiseai.TestActivity">

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:dropDownWidth="2dp"
            android:padding="4dp"
            android:spinnerMode="dropdown"
            android:textSize="18sp"
            app:smsp_enableFloatingLabel="true"
            app:smsp_hint="Component"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />

        <EditText
            android:id="@+id/speciesStockedTxt"
            style="@style/AppEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Speicies stocked"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:drawableEnd="@drawable/drop_down"
            android:inputType="number" />
        <EditText
            android:id="@+id/speciesStockedTxt2"
            style="@style/AppEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Speicies stocked"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:drawableEnd="@drawable/drop_down"
            android:inputType="number" />

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:dropDownWidth="2dp"
            android:padding="4dp"
            android:spinnerMode="dropdown"
            android:textSize="18sp"
            android:visibility="gone"
            app:smsp_enableFloatingLabel="true"
            app:smsp_hint="Species stocked"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />



        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:dropDownWidth="2dp"
            android:padding="8dp"
            android:spinnerMode="dropdown"
            android:textSize="18sp"
            android:visibility="gone"
            app:smsp_enableFloatingLabel="true"
            app:smsp_hint="Sub Component"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:dropDownWidth="2dp"
            android:padding="8dp"
            android:spinnerMode="dropdown"
            android:textSize="18sp"
            android:visibility="gone"
            app:smsp_enableFloatingLabel="true"
            app:smsp_hint="Stages"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />

        <EditText
            android:id="@+id/sowingDatepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/camera_icon" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/camera_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/latValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:id="@+id/longValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:text="0" />
        </LinearLayout>

        <Button
            android:id="@+id/getLatLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get location" />

        <Button
            android:id="@+id/clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get click" />


        <LinearLayout
            android:id="@+id/businessPlanLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="SI.No" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="Name of Beneficiriey" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="Village" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="Name of the project" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="Cost of the project" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="Date of release of Grant" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="Total Grant Amount" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iec_layt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                style="@style/AppEdittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:hint="No of Participants" />

            <TextView
                style="@style/head_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="Male No."
                android:textColor="@color/black"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/male_others"
                    style="@style/AppEdittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:hint="Others No"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/male_no"
                    style="@style/AppEdittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:hint="SC/ST No."
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                style="@style/head_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="Female No."
                android:textColor="@color/black"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/female_others"
                    style="@style/AppEdittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:hint="Others No"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/female_no"
                    style="@style/AppEdittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:hint="SC/ST No."
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seed_group_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="14dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/name_of_group"
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_of_the_group" />

            <EditText
                android:id="@+id/doa_txt"
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_account_open" />

            <EditText
                android:id="@+id/dorf_txt"
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_revolving_fund_release" />

            <EditText
                android:id="@+id/area_raised_txt"
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/seed_from_area_raised_ha"
                android:digits="1234567890."
                android:inputType="number"
                android:maxLength="4"/>

            <EditText
                android:id="@+id/quantity_txt"
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/quantity_to_proceed_kg"
                android:digits="1234567890."
                android:inputType="number"
                android:maxLength="4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/othersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/med_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:text="50-100 Characters" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="2dp"
                android:gravity="top|start"
                android:hint="Intervention name"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:inputType="text"/>
        </LinearLayout>

        <!--Layout 1-->
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.anurag.multiselectionspinner.MultiSpinner
                android:id="@+id/speciesMulti1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:hint="Species stocks"
                android:padding="18dp" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/lessee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:dropDownWidth="2dp"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:textSize="18sp"
                app:smsp_enableFloatingLabel="true"
                app:smsp_hint="Lessee"
                app:smsp_multilineError="false" />
        </LinearLayout>
        <!--Layout 2-->
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/speciesSpinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:dropDownWidth="2dp"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:textSize="18sp"
                app:smsp_enableFloatingLabel="true"
                app:smsp_hint="Species stocks"
                app:smsp_multilineError="false" />

            <EditText
                android:id="@+id/seedStockTXt"
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Feed Quantity"
                android:inputType="number" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/bene1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:dropDownWidth="2dp"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:textSize="18sp"
                app:smsp_enableFloatingLabel="true"
                app:smsp_hint="Beneficiary"
                app:smsp_multilineError="false" />
        </LinearLayout>
        <!--Layout 3-->
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.anurag.multiselectionspinner.MultiSpinner
                android:id="@+id/speciesMulti2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:hint="Species stocks"
                android:padding="18dp" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Feed Quantity"
                android:inputType="number" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/bene2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:dropDownWidth="2dp"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:textSize="18sp"
                app:smsp_enableFloatingLabel="true"
                app:smsp_hint="Beneficiary"
                app:smsp_multilineError="false" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Number reared"
                android:inputType="number" />
        </LinearLayout>
        <!--Layout 4-->
        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Farm pond constructed by"
                android:inputType="number" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Beneficary Name"
                android:inputType="number" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Survey No."
                android:inputType="number" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:singleLine="true" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/gender_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:dropDownWidth="2dp"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:textSize="18sp"
                app:smsp_enableFloatingLabel="true"
                app:smsp_hint="Gender"
                app:smsp_multilineError="false" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:dropDownWidth="2dp"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:textSize="18sp"
                app:smsp_enableFloatingLabel="true"
                app:smsp_hint="Category"
                app:smsp_multilineError="false" />

            <com.anurag.multiselectionspinner.MultiSpinner
                android:id="@+id/speciesMulti3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:hint="Species stocks"
                android:padding="18dp" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Feed Quantity"
                android:inputType="number" />

            <EditText
                style="@style/AppEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="No.of Seeds"
                android:inputType="number" />
        </LinearLayout>
        <!--Last spinner-->
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/beneFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:dropDownWidth="2dp"
            android:padding="8dp"
            android:spinnerMode="dropdown"
            android:textSize="18sp"
            app:smsp_enableFloatingLabel="true"
            app:smsp_hint="Beneficiary"
            app:smsp_multilineError="false" />

    </LinearLayout>

</layout>
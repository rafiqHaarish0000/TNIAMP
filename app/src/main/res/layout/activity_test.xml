<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.farmwiseai.TestActivity">

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_enableFloatingLabel="true"
            android:textSize="18sp"
            app:smsp_hint="Component"
            android:padding="4dp"
            android:dropDownWidth="2dp"
            android:spinnerMode="dropdown"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false"/>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_enableFloatingLabel="true"
            android:textSize="18sp"
            app:smsp_hint="Sub Component"
            android:padding="8dp"
            android:visibility="gone"
            android:dropDownWidth="2dp"
            android:spinnerMode="dropdown"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_enableFloatingLabel="true"
            android:textSize="18sp"
            app:smsp_hint="Stages"
            android:padding="8dp"
            android:visibility="gone"
            android:dropDownWidth="2dp"
            android:spinnerMode="dropdown"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sowingDatepicker"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:visibility="gone"
            android:focusableInTouchMode="false"/>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_1"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/camera_icon"/>
            <ImageView
                android:id="@+id/image_2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/camera_icon"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="18dp">
                <TextView
                    android:id="@+id/latValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <TextView
                    android:id="@+id/longValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="0"/>
            </LinearLayout>

        <Button
            android:id="@+id/getLatLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get location" />

        <Button
            android:id="@+id/clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get click" />


        <LinearLayout
            android:id="@+id/iec_layt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:layout_marginStart="4dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppEdittext"
                android:gravity="start"
                android:layout_gravity="start"
                android:hint="No of Participants"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Male No."
                style="@style/head_text"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/male_others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppEdittext"
                    android:gravity="start"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:hint="Others No"/>
                <EditText
                    android:id="@+id/male_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppEdittext"
                    android:gravity="start"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:hint="SC/ST No."/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Female No."
                style="@style/head_text"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/female_others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppEdittext"
                    android:gravity="start"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:hint="Others No"/>
                <EditText
                    android:id="@+id/female_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppEdittext"
                    android:gravity="start"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:hint="SC/ST No."/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>
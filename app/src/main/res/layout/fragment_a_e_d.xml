<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".view.ui.mainView.ui.fragment.survey_info.pager.validations.cce_survey.CCE_Survey_Activity">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="@drawable/gradient_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pop_back_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    style="@style/head_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="AED" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/phase1"
                        style="@style/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="@string/phases"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />


                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/sub_basin_txt"
                        style="@style/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="@string/sub_basin"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />


                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/district_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:padding="8dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="@string/district"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/block_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:padding="8dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="Block"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/village_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:padding="8dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="@string/village"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/component_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:padding="8dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="Component"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/sub_components_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:padding="8dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        android:visibility="gone"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="@string/sub_components"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/stage_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:padding="8dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        android:visibility="gone"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="Stages"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />

                    <LinearLayout
                        android:id="@+id/othersLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/med_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="50-100 Characters" />

                        <EditText
                            android:id="@+id/inerventionNameTxt"
                            style="@style/AppEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="2dp"
                            android:gravity="top|start"
                            android:hint="Intervention name"
                            android:lines="8"
                            android:maxLines="10"
                            android:minLines="6"
                            android:maxLength="100"
                            android:inputType="text"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/visibilityLyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/used_for_fish_culture" />

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioYes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="Yes" />

                                <RadioButton
                                    android:id="@+id/radioNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No" />
                            </RadioGroup>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/farmer_txt"
                            style="@style/AppEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:hint="@string/farmer_name"
                            android:inputType="text" />

                        <EditText
                            android:id="@+id/mobileNumbertxt"
                            style="@style/AppEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/mobile_number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:ems="10"
                            android:singleLine="true" />

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/gender_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="12dp"
                            android:dropDownWidth="2dp"
                            android:padding="8dp"
                            android:spinnerMode="dropdown"
                            android:textSize="18sp"
                            app:smsp_enableFloatingLabel="true"
                            app:smsp_hint="@string/gender"
                            app:smsp_hintColor="@color/grey"
                            app:smsp_multilineError="false" />

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/category_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="12dp"
                            android:dropDownWidth="2dp"
                            android:padding="8dp"
                            android:spinnerMode="dropdown"
                            android:textSize="18sp"
                            app:smsp_enableFloatingLabel="true"
                            app:smsp_hint="@string/category"
                            app:smsp_hintColor="@color/grey"
                            app:smsp_multilineError="false" />

                        <EditText
                            android:id="@+id/survey_txt"
                            style="@style/AppEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/survey_no"
                            android:inputType="text"
                            android:maxLength="10"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890/ "
                            />

                        <EditText
                            android:id="@+id/area_txt"
                            style="@style/AppEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:digits="1234567890."
                            android:hint="@string/area_ha"
                            android:inputType="numberDecimal|number"
                            android:maxLength="4" />

                        <EditText
                            android:id="@+id/tank_txt"
                            style="@style/AppEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/near_by_tank_name"
                            android:inputType="text"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~!@#$%^,/*()_- \"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/take_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="18dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            style="@style/head_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="Take photo"
                            android:textColor="@color/color_accent"
                            android:textSize="28dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="18dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_1"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/camera_icon" />

                        <ImageView
                            android:id="@+id/image_2"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/camera_icon" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/remarks_txt"
                        style="@style/AppEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:inputType="text"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "

                        android:hint="@string/remarks" />

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/inverntionTyper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:dropDownWidth="2dp"
                        android:padding="8dp"
                        android:spinnerMode="dropdown"
                        android:textSize="18sp"
                        app:smsp_enableFloatingLabel="true"
                        app:smsp_hint="Intervention Type (Optional)"
                        app:smsp_hintColor="@color/grey"
                        app:smsp_multilineError="false" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="18dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/check_values"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consider as a Test" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/submission_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/submit"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>


</layout>
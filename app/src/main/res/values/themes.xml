    <!-- CCE Main AppTheme Components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_accent</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- CCE Main MaterialTheme Components -->
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_accent</item>
        <item name="colorOnPrimary">@color/grey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    //TextInputLayout

    <style name="TextInputLayout_theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    //textInputEditText

    <style name="Edittext_theme" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="singleLine">true</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>


    //headText

    <style name="head_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="splash_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    //mediumtext

    <style name="med_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="med_text2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="cart_txt" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="med_text3" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="med_text4" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dashboard_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    //textEdit

    <style name="edit_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //normal edit

    <style name="AppEdittext" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">18dp</item>

    </style>


    //all_text_buttons

    <style name="text_button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>
    //progressbar

    <style name="appProgressBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //spinnerView
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

</resources>
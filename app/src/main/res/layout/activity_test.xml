<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.farmwiseai.TestActivity">

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_enableFloatingLabel="true"
            android:textSize="18sp"
            app:smsp_hint="Component"
            android:padding="8dp"
            android:dropDownWidth="2dp"
            android:spinnerMode="dropdown"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false"/>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_enableFloatingLabel="true"
            android:textSize="18sp"
            app:smsp_hint="Sub Component"
            android:padding="8dp"
            android:visibility="gone"
            android:dropDownWidth="2dp"
            android:spinnerMode="dropdown"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/phase3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_enableFloatingLabel="true"
            android:textSize="18sp"
            app:smsp_hint="Stages"
            android:padding="8dp"
            android:visibility="gone"
            android:dropDownWidth="2dp"
            android:spinnerMode="dropdown"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:smsp_hintColor="#388E3C"
            app:smsp_multilineError="false" />


    </LinearLayout>

</layout>